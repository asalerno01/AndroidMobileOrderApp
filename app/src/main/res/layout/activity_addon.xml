<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_addonCheckbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_check_box_outline_blank_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_addonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:text="@string/addon_name"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_addonPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/upcharge_label_gray"
        android:layout_marginStart="8dp"
        android:text="+$0.50"
        android:layout_gravity="center"
        android:textSize="20sp" />

</LinearLayout>